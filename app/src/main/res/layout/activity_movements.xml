<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkBlue">

    <!-- Card superior com título da tela e navegação -->
    <LinearLayout
        android:id="@+id/movements_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg_accounts_card"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- ... seu conteúdo superior ... -->
        <!-- (mantenha igual ao seu layout atual) -->
    </LinearLayout>

    <!-- Bottom Navigation fixo -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:background="@color/primaryDarkBlue"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:tint="@color/white"
            android:contentDescription="Home"
            android:focusable="true"
            android:padding="4dp"
            android:clickable="true" />

        <!-- Espaço para centralizar o "+" -->
        <ImageView
            android:id="@+id/nav_movements"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrows"
            android:tint="@color/white"
            android:contentDescription="Movimentações"
            android:focusable="true"
            android:padding="4dp"
            android:clickable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nav_accounts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_bank"
            android:tint="@color/white"
            android:contentDescription="Contas"
            android:focusable="true"
            android:padding="4dp"
            android:clickable="true" />

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_menu"
            android:tint="@color/white"
            android:contentDescription="Menu"
            android:focusable="true"
            android:padding="4dp"
            android:clickable="true" />
    </LinearLayout>

    <!-- Botão central de adicionar, SOBREPOSTO à barra -->
    <ImageButton
        android:id="@+id/nav_add"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/circle_blue"
        android:src="@drawable/ic_add"
        android:tint="@color/white"
        android:elevation="16dp"
        android:contentDescription="Adicionar Movimento"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="36dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>