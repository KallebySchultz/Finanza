<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkBlue"
    android:fitsSystemWindows="false">

    <!-- Container branco para o conteúdo -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- Dashboard superior azul com melhor estilo -->
        <LinearLayout
            android:id="@+id/dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDarkBlue"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="48dp"
            android:paddingRight="24dp"
            android:paddingBottom="32dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvSaldoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="Saldo em contas:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal"
                android:alpha="0.9" />

            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="R$ 1836,72"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

            <ImageView
                android:id="@+id/imgEye"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="24dp"
                android:src="@drawable/ic_eye_open"
                android:tint="@color/white"
                android:alpha="0.8"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <!-- Receitas e Despesas com melhor estilo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <!-- Receita -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="20dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:tint="@color/positiveGreen"
                        android:alpha="0.9" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receitas"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:alpha="0.8" />

                        <TextView
                            android:id="@+id/tvReceita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$2780,72"
                            android:textColor="@color/positiveGreen"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.01" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Despesa -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down"
                        android:tint="@color/negativeRed"
                        android:alpha="0.9" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Despesas"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:alpha="0.8" />

                        <TextView
                            android:id="@+id/tvDespesa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$944,00"
                            android:textColor="@color/negativeRed"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.01" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Seu conteúdo branco pode vir aqui, abaixo do dashboard -->

    </LinearLayout>

    <!-- Bottom Navigation fixo com melhor estilo -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="bottom"
        android:background="@color/primaryDarkBlue"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Home"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ic_home"
            android:tint="@color/accentBlue"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/nav_movements"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Movimentações"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrows"
            android:tint="@color/white"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nav_accounts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Contas"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ic_bank"
            android:tint="@color/white"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Menu"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ic_menu"
            android:tint="@color/white"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Botão central de adicionar -->
    <ImageButton
        android:id="@+id/nav_add"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="56dp"
        android:background="@drawable/circle_blue"
        android:clickable="true"
        android:contentDescription="Adicionar"
        android:elevation="12dp"
        android:focusable="true"
        android:padding="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_add"
        android:tint="@color/white"
        app:layout_anchor="@+id/bottom_nav"
        app:layout_anchorGravity="top|center" />

    <!-- Painel antigo de adicionar receita/despesa -->
    <FrameLayout
        android:id="@+id/add_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="120dp">

            <LinearLayout
                android:id="@+id/btnReceita"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_circle_gray"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_up"
                    android:tint="@color/positiveGreen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECEITA"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDespesa"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_circle_gray"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/negativeRed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESPESA"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- PAINEL MATERIAL DESIGN DE ADICIONAR LANÇAMENTO (NOVO/APRIMORADO) -->
    <FrameLayout
        android:id="@+id/add_transaction_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000" />

        <LinearLayout
            android:id="@+id/form_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="200dp"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="@drawable/bg_modal_modern"
            android:elevation="16dp">

            <!-- Nome (Padrão: Reajuste de saldo) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/white"
                android:hint="Nome">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reajuste de saldo"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Conta (não editável, mas clicável) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/white"
                android:hint="Conta">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_conta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Data -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/white"
                android:hint="Data">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Categoria -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/white"
                android:hint="Categoria">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Valor -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/white"
                android:hint="Valor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_valor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="#AAFFFFFF"
                    android:textSize="16sp"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão Salvar -->
            <Button
                android:id="@+id/btn_salvar_lancamento"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Salvar"
                android:textColor="@color/white"
                android:backgroundTint="@color/accentBlue"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:letterSpacing="0.02"
                android:elevation="8dp"/>
        </LinearLayout>

        <!-- Botão X para fechar com melhor estilo -->
        <ImageButton
            android:id="@+id/btn_close_panel"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="48dp"
            android:background="@drawable/circle_blue"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            android:elevation="20dp"
            android:contentDescription="Fechar"
            android:padding="12dp"
            android:scaleType="centerInside" />
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>