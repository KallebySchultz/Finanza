<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkBlue"
    android:fitsSystemWindows="false">

    <!-- Container branco para o conteúdo -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- Dashboard superior azul -->
        <LinearLayout
            android:id="@+id/dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryDarkBlue"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="40dp"
            android:paddingRight="24dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tvSaldoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="Saldo em contas:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="R$ 1836,72"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgEye"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:src="@drawable/ic_eye_open"
                android:tint="@color/white" />

            <!-- Receitas e Despesas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <!-- Receita -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_up"
                        android:tint="@color/positiveGreen" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receitas"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvReceita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$2780,72"
                            android:textColor="@color/positiveGreen"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Despesa -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down"
                        android:tint="@color/negativeRed" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Despesas"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDespesa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$944,00"
                            android:textColor="@color/negativeRed"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Conteúdo principal da tela inicial -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:fillViewport="true"
            android:paddingBottom="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Resumo de Contas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_accounts_card"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RESUMO DE CONTAS"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/accounts_summary_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <!-- Categorias Mais Utilizadas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_accounts_card"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GASTOS POR CATEGORIA"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/categories_summary_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <!-- Últimas Transações -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_accounts_card"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ÚLTIMAS TRANSAÇÕES"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/recent_transactions_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Bottom Navigation fixo -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="bottom"
        android:background="@color/primaryDarkBlue"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Home"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_home"
            android:tint="@color/accentBlue" />

        <ImageView
            android:id="@+id/nav_movements"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Movimentações"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_arrows"
            android:tint="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nav_accounts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Contas"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_bank"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Menu"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_menu"
            android:tint="@color/white" />
    </LinearLayout>

    <!-- Botão central de adicionar -->
    <ImageButton
        android:id="@+id/nav_add"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="56dp"
        android:background="@drawable/circle_blue"
        android:clickable="true"
        android:contentDescription="Adicionar"
        android:elevation="12dp"
        android:focusable="true"
        android:padding="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_add"
        android:tint="@color/white"
        app:layout_anchor="@+id/bottom_nav"
        app:layout_anchorGravity="top|center" />

    <!-- Painel antigo de adicionar receita/despesa -->
    <FrameLayout
        android:id="@+id/add_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="120dp">

            <LinearLayout
                android:id="@+id/btnReceita"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_circle_white"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_stonks"
                    android:tint="@color/positiveGreen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECEITA"
                    android:textColor="@color/primaryDarkBlue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDespesa"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_circle_white"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_nstonks"
                    android:tint="@color/negativeRed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESPESA"
                    android:textColor="@color/primaryDarkBlue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- PAINEL MATERIAL DESIGN DE ADICIONAR LANÇAMENTO (NOVO/APRIMORADO) -->
    <FrameLayout
        android:id="@+id/add_transaction_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000" />

        <LinearLayout
            android:id="@+id/form_card"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="@drawable/bg_modal_white"
            android:elevation="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar Transação"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primaryDarkBlue"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome"
                    android:textColor="@color/primaryDarkBlue"
                    android:textColorHint="@color/primaryDarkBlue"
                    android:background="@drawable/edittext_bg"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_conta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Conta"
                    android:textColor="@color/primaryDarkBlue"
                    android:textColorHint="@color/primaryDarkBlue"
                    android:background="@drawable/edittext_bg"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data"
                    android:textColor="@color/primaryDarkBlue"
                    android:textColorHint="@color/primaryDarkBlue"
                    android:background="@drawable/edittext_bg"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Categoria"
                    android:textColor="@color/primaryDarkBlue"
                    android:textColorHint="@color/primaryDarkBlue"
                    android:background="@drawable/edittext_bg"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_valor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Valor"
                    android:textColor="@color/primaryDarkBlue"
                    android:textColorHint="@color/primaryDarkBlue"
                    android:background="@drawable/edittext_bg"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_salvar_lancamento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Salvar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button_blue"
                android:elevation="2dp"/>
        </LinearLayout>

        <!-- Botão X para fechar - REMOVIDO para evitar conflito com nav_add -->
        <!-- O botão nav_add agora funciona como botão de fechar quando o painel está aberto -->
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>