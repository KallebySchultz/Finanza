<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkBlue"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/accounts_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="120dp">

        <LinearLayout
            android:id="@+id/accounts_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_accounts_card"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- MÃªs e navegaÃ§Ã£o -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"/>

            <!-- Saldo atual -->
            <TextView
                android:id="@+id/txt_saldo_atual_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="SALDO ATUAL"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_saldo_atual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="R$1836,72"
                android:textColor="@color/positiveGreen"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Linha divisÃ³ria -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white" />

            <!-- Conta padrÃ£o em destaque -->
            <LinearLayout
                android:id="@+id/default_account_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_transaction_item">

                <ImageView
                    android:id="@+id/default_account_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_account_icon_circle_purple"
                    android:padding="6dp"
                    android:src="@drawable/ic_bank" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/default_account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conta PadrÃ£o"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/default_account_saldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$1000,00"
                        android:textColor="@color/positiveGreen"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Lista de contas dinÃ¢mica -->
            <LinearLayout
                android:id="@+id/accounts_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
                
            <!-- Hint para funcionalidade de exclusÃ£o -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Toque para editar â€¢ Mantenha pressionado para excluir"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:gravity="center"
                android:padding="16dp"
                android:alpha="0.7" />
        </LinearLayout>
    </ScrollView>

    <!-- Painel/balÃ£o para cadastrar nova conta (sem botÃ£o Voltar) -->
    <FrameLayout
        android:id="@+id/contas_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="111dp"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="16dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white"
            android:padding="32dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastrar Conta"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primaryDarkBlue"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/input_nome_conta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome da conta"
                android:textColor="@color/primaryDarkBlue"
                android:textColorHint="@color/primaryDarkBlue"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/input_saldo_inicial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Saldo inicial"
                android:textColor="@color/primaryDarkBlue"
                android:textColorHint="@color/primaryDarkBlue"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp"
                android:inputType="numberDecimal"/>

            <Button
                android:id="@+id/btn_salvar_conta"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cadastrar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/button_blue"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Navigation fixo -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="bottom"
        android:background="@color/primaryDarkBlue"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="32dp"
        app:layout_anchor="@+id/accounts_scroll"
        app:layout_anchorGravity="bottom|center">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Home"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_home"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/nav_movements"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="MovimentaÃ§Ãµes"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_arrows"
            android:tint="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nav_accounts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Contas"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_bank"
            android:tint="@color/accentBlue" />

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Menu"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_menu"
            android:tint="@color/white" />
    </LinearLayout>

    <!-- BotÃ£o central de adicionar -->
    <ImageButton
        android:id="@+id/nav_add"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="56dp"
        android:background="@drawable/circle_blue"
        android:clickable="true"
        android:contentDescription="Adicionar"
        android:elevation="12dp"
        android:focusable="true"
        android:padding="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_add"
        android:tint="@color/white"
        app:layout_anchor="@+id/bottom_nav"
        app:layout_anchorGravity="top|center" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>