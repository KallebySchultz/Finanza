                    <label for="confirmSenha" class="form-label">Confirmar Senha</label>
                    <input type="password" id="confirmSenha" name="confirmSenha" class="form-control" required minlength="6">
                </div>

                <button type="submit" id="registerBtn" class="btn btn-primary w-full">Cadastrar</button>
            </form>

            <div class="text-center">
